<style>
  .card-text{
        display: -webkit-box;
      -webkit-line-clamp: 3;
      -webkit-box-orient: vertical;
      overflow: hidden;
      text-overflow: ellipsis;
    }
</style>

<main class="border-bottom">
  <div class="album py-5 bg-light">
    <div class="container">

      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
      {{#if datas}}{{#each datas}}
        <div class="col">
          <div class="card shadow-sm">
            <img src="/images/{{this.img}}" class="img-fluid" >
            <div class="card-body">
              <p class="h5 text-dark ">{{this.title}}</p>
              <p class="card-text text-secondary">{{this.description}}</p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a href="{{this.link}}" target="_blank" type="button" class="btn btn-sm btn-outline-secondary">View</a>                </div>
                <small class="text-muted">{{this.date}}</small>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
      {{else}}
        <div class="col {{#if datas}}{{else}}m-auto{{/if}}">
          <div class="card shadow-sm">
            <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"></rect></svg>
            <div class="card-body">
              <p class="h5 text-dark ">{{reason}}</p>
            </div>
          </div>
        </div>
      {{/if}}
      </div>
    </div>
  </div>

</main>