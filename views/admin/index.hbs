<div class="container-fluid p-4">
    <div class="container">
        {{> _success}}
        {{> _error}}

        <form action="/admin/search" class="d-flex align-items-center justify-content-center col-12 col-md-4 p-2">
            <input type="text" class="form-control" name="search" placeholder="Search">
            <button type="submit" class="btn text-primary mx-2">Search</button>
        </form>
        <table class="table table-hover">
            <thead class="table-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                {{#if clients}}
                {{#each clients }}
                <tr>
                    <th scope="row">{{this.index}}</th>
                    <td>{{this.name}}</td>
                    <td>{{this.email}}</td>
                    <td class="text-center">
                        <a href="/admin/viewUser/{{this.email}}"  title="View {{this.email}}" class="mx-2">View</a>
                        <a href="/admin/editUser/{{this.email}}"  title="Edit {{this.email}}" class="mx-2">Edit</a>
                        <a href="/admin/deleteUser/{{this.email}}" title="Delete {{this.email}}"
                            onclick="{
                                if(confirm('Do you want to delete {{this.email}}')) 
                                    return deleteUser(event, this);
                                else 
                                    return false
                            }" class="text-danger mx-2">Delete</a>
                    </td>
                </tr>
                {{/each}}
                {{else}}
                <tr>
                    <th scope="row" colspan="4" class="text-center">{{reason}}</th>
                </tr>
                {{/if}}
            </tbody>
        </table>
    </div>
</div>